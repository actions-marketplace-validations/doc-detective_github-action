  "bugs": {
    "url": "https://github.com/doc-detective/doc-detective-action/issues"
  },
  "homepage": "https://github.com/doc-detective/doc-detective-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "doc-detective-core": "^2.14.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "nodemon": "^3.1.4"
  }
}
